generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario{
  id Int @id @unique @default (autoincrement())
  nombre String? //? significa que puede ser null
  email String @unique
  password String
  rol USUARIO_ROL @default (CLIENTE)
  validado Boolean @default(false)
  pedido Pedido[]
  @@map("usuarios")
}
  
model Producto{
  id Int @id @unique @default (autoincrement())
  nombre String? 
  precio Float
  unidadMedida UM_PRODUCTO @map("unidad_medida")
  categoria CATEGORIA_PRODUCTOS
  @@map("productos")
}

model Pedido{
  id Int @id @unique @default (autoincrement())
  fecha DateTime @db.Date
  total Float
  estado PEDIDO_ESTADO
  process_id String? @db.VarChar(100)
  clienteId Int
  //solo lpara el ORM
  cliente Usuario @relation(fields:[clienteId],references:[id])
}

enum PEDIDO_ESTADO{
  CREADO
  ACEPTADO
  PAGADO
  ERROR
}

enum USUARIO_ROL{
  ADMINISTRADOR
  CLIENTE
}


enum UM_PRODUCTO{
  KG
  UNIDAD
}

enum CATEGORIA_PRODUCTOS{
  VERDURA
  FRUTA  
  ELECTRODOMESTICOS
  LIMPIEZA
  OTROS
}