// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures=["interactiveTransactions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario{
  id Int @id @unique @default (autoincrement())
  nombre String? //? significa que puede ser null
  email String @unique
  password String
  rol USUARIO_ROL @default (CLIENTE)
  validado Boolean @default(false)
  pedido Pedido[]
  @@map("usuarios")
}
  
model Producto{
  id Int @id @unique @default (autoincrement())
  nombre String? 
  precio Float
  unidadMedida UM_PRODUCTO @map("unidad_medida")
  categoria CATEGORIA_PRODUCTOS

  detallePedidos DetallePedido[]

  @@map("productos")
}

model Pedido{
  id Int @id @unique @default (autoincrement())
  fecha DateTime @db.Date
  total Float
  estado PEDIDO_ESTADO
  processId String? @map("process_id")
  clienteId Int @map("cliente_id")
  usuario Usuario @relation(fields:[clienteId],references:[id])
  
  detallePedidos DetallePedido[]

  @@map("pedidos")
  //solo lpara el ORM
  
}

model DetallePedido{
  id Int @id @unique @default (autoincrement())
  cantidad Float
  subTotal Float @map("sub_total")
  unidadMedida UM_PRODUCTO
  productoId Int @map("producto_id")
  pedidoId Int @map("pedido_id")

  producto Producto @relation(fields:[productoId],references:[id])
  pedido Pedido @relation(fields:[pedidoId],references:[id])
  @@map ("detalle_pedidos")
}

enum PEDIDO_ESTADO {
  CREADO
  ACEPTADO
  PAGADO
  ERROR
}

enum USUARIO_ROL {
  ADMINISTRADOR
  CLIENTE
}


enum UM_PRODUCTO{
  KG
  UNIDAD
}

enum CATEGORIA_PRODUCTOS{
  VERDURA
  FRUTA  
  ELECTRODOMESTICOS
  LIMPIEZA
  OTROS
}